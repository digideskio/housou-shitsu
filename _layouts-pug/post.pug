extends mdlLayouts/base.pug

block content
  section.mdl-grid.mdl-grid-post
    .mdl-cell.mdl-cell--center.mdl-cell--8-col
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title.mdl-typography--display-1 {{ page.title }}
        .mdl-card__supporting-text
          p.post-meta
            | 放送日:{{ page.date | date: "%Y年%m月%-d日" }}
          article
            | {{ content }}
        .mdl-card__actions.mdl-card--border
          a.mdl-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(href='https://www.youtube.com/results?search_query=放送室+{{ page.youtube }}' target="_blank")
            | Youtubeで探す
        .mdl-card__actions.mdl-card--border
            | {% for tag in page.tags %}
            span.mdl-chip.hs-chip
              a.mdl-chip__text(href='{{ site.baseurl }}/tags/index.html#{{ tag | slugize }}') {{ tag }}
            | {% endfor %}

  section.mdl-grid
    .mdl-cell.mdl-cell--center.mdl-cell--8-col
      .mdl-card.mdl-shadow--2dp
        .mdl-card__title.mdl-typography--title 挿入歌
        .mdl-card__supporting-text
          h1.mdl-typography--title {{ page.songName }}
          h2.mdl-typography--body-1 {{ page.singer }}

        .mdl-card__actions.mdl-card--border
          a.mdl-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent(href='https://www.youtube.com/results?search_query={{ page.singer }}+{{ page.songName }}' target="_blank")
            | Youtubeで探す
